@model IEnumerable<Vidly.Models.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

@if (!Model.Any())
{
    <p>Currently we have no customers.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>Customer</tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr><td>@Html.ActionLink(customer.Name, "Details", "Customers", new { id = customer.Id },null)</td></tr>
            }
        </tbody>
    </table>
}
