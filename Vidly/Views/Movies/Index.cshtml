@model List<Vidly.Models.Movie>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

@if (Model.Count > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>Movie</tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr><td>@movie.Name</td></tr>
            }
        </tbody>
    </table>
}

